<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-8 offset-3">

            <h2>Listing Details</h2>
            </div>
            <div class="card col-6 offset-3">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                      <b><%= listing.title %></b> <br>
                      <%= listing.description %> <br>
                      &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                      <%= listing.location %> <br>
                      <%= listing.country %>
                    </p>
                </div>
            </div>
            <br>
            <div class=" btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn add-btn edit-btn">Edit</a>
            <a href="/listings/<%= listing._id %>/book" class="btn add-btn book-btn">Book</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn add-btn delete-btn" id="deleteButton">Delete</button>
            </form>
        </div>
    </div>